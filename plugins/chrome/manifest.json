{
  "manifest_version": 3,
  "name": "Agent Logger DevTools",
  "version": "0.1",
  "description": "Logs agent messages to the console via DevTools.",
  "devtools_page": "devtools.html",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "ws://localhost:9999/*",
    "wss://localhost:9999/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
